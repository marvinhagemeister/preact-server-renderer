{
  "name": "preact-server-renderer",
  "version": "0.2.1",
  "description": "Server-side renderer for preact",
  "main": "dist/index.js",
  "author": "Marvin Hagemeister <marvin@marvinhagemeister.de>",
  "license": "MIT",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/marvinhagemeister/preact-server-renderer.git"
  },
  "scripts": {
    "bench": "ts-node benchmark/index.ts",
    "cleanup": "rimraf dist/",
    "lint": "tslint 'src/**/*.ts'",
    "watch": "tsc -w",
    "build": "npm run cleanup && tsc",
    "test": "jest",
    "test-watch": "jest --watch",
    "coverage": "jest --coverage",
    "format": "prettier --trailing-comma=all --write 'src/**/*.{ts,tsx}'",
    "prepublishOnly": "npm run lint && npm t && npm run build",
    "precommit": "lint-staged"
  },
  "peerDependencies": {
    "preact": "*"
  },
  "dependencies": {
    "@types/node": "^8.0.26",
    "vdom-utils": "^0.3.1"
  },
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "benchmarkjs-pretty": "^2.0.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.0.4",
    "preact": "^8.2.5",
    "preact-render-to-string": "^3.6.3",
    "prettier": "^1.6.1",
    "rimraf": "^2.6.1",
    "ts-jest": "^21.2.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "tslint-config-sevenval": "^0.6.3",
    "typescript": "^2.5.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --trailing-comma=all --write",
      "npm run lint",
      "git add"
    ]
  }
}
