{
  "name": "preact-server-renderer",
  "version": "0.1.0",
  "description": "Server-side renderer for preact",
  "main": "dist/index.js",
  "author": "Marvin Hagemeister <marvin@marvinhagemeister.de>",
  "license": "MIT",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:marvinhagemeister/preact-server-renderer.git"
  },
  "scripts": {
    "bench": "ts-node benchmark/index.ts",
    "cleanup": "rimraf dist/",
    "lint": "tslint 'src/**/*.ts'",
    "watch": "tsc -w",
    "build": "npm run cleanup && tsc",
    "test": "mocha --watch-extensions tsx,ts  --compilers ts:ts-node/register 'src/**/__tests__/*.spec.*'",
    "test-watch": "npm t -- -w -R min",
    "coverage": "nyc npm t",
    "format": "prettier --trailing-comma=all --write 'src/**/*.{ts,tsx}'",
    "prepublish": "npm run lint && npm t && npm run build",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@types/node": "^7.0.31",
    "preact": "^8.1.0",
    "vdom-utils": "^0.1.0"
  },
  "devDependencies": {
    "@types/benchmark": "^1.0.30",
    "@types/chai": "^4.0.0",
    "@types/chalk": "^0.4.31",
    "@types/mocha": "^2.2.41",
    "@types/sinon": "^2.3.1",
    "benchmark": "^2.1.4",
    "chai": "^4.0.2",
    "chalk": "^1.1.3",
    "husky": "^0.13.4",
    "lint-staged": "^3.6.1",
    "mocha": "^3.3.0",
    "nyc": "^11.0.2",
    "preact-render-to-string": "^3.6.3",
    "prettier": "^1.4.4",
    "rimraf": "^2.6.1",
    "sinon": "^2.3.2",
    "ts-node": "^3.0.6",
    "tslint": "^5.1.0",
    "tslint-config-sevenval": "^0.6.1",
    "typescript": "^2.3.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --trailing-comma=all --write",
      "npm run lint",
      "git add"
    ]
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "node_modules/",
      "**/__tests__/**",
      "__tests__/**",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text",
      "text-summary",
      "lcovonly"
    ],
    "all": true
  },
  "peerDependencies": {
    "preact": "^8.1.0"
  }
}
